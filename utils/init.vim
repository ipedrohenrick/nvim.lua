" disable compatibility with vi
set nocompatible

" filetype config
filetype on
filetype indent on

syntax on

" backup disable
set nobackup

set number
set relativenumber

set cursorline

" tab and shift config
set shiftwidth=4
set tabstop=4
set expandtab

set scrolloff=10

" search config
set incsearch
set ignorecase
set smartcase
set showmatch
set hlsearch

" set completion menu
set wildmenu
set wildmode=list:longest